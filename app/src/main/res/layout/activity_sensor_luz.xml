<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SensorLuz">

    <TextView
            android:text="TextView"
            android:layout_width="99dp"
            android:layout_height="28dp"
            android:id="@+id/tvLux"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/btPause"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btStart"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:onClick="resume"/>
    <Button
            android:text="Pausa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btPause" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btStart"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp" tools:text="Pausa"
            android:onClick="pause"/>
    <Button
            android:text="Resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btResume" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btPause"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:onClick="resume"/>
    <TextView
            android:text="Lux:"
            android:layout_width="46dp"
            android:layout_height="19dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/btPause"/>
</android.support.constraint.ConstraintLayout>